/*行动表*/

.action-sheet-wrapper {
    position: absolute;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 10;
    display: block;
    margin: auto;
    width: 100%;
    max-width: 100%!important;
}

.action-sheet-ios .action-sheet-title {
    padding: r(30px)!important;
    font-size: r(40px)!important;
}

.action-sheet-ios .action-sheet-container {
    height: 50%!important;
}

.action-sheet-ios .action-sheet-group:nth-child(1) {
    height: 75%!important;
}

.action-sheet-ios .action-sheet-group:nth-child(2) {
    height: 25%!important;
}

.action-sheet-ios .action-sheet-button {
    font-size: r(16px)!important;
    min-height: r(100px)!important;
    float: left;
}

.action-sheet-ios .action-sheet-button .button-inner {
    display: inline-block!important;
    width: 100%;
    height: 100%;
    font-weight: 100;
}

.action-sheet-ios .action-sheet-button {
    font-size: r(26px)!important;
}

.clear {
    clear: both!important;
}

//头部
ion-header {
    .toolbar-title {
        font-weight: 100;
    }
}

//ion-loading----------------------------------------------------
ion-loading {
    .loading-wrapper {
        padding: r(24px)!important;
        .loading-content {
            font-size: r(22px)!important;
        }
    }
}

//小黑条
.toast-ios .toast-wrapper {
    background: none!important;
    text-align: center!important;
    color: #fff!important;
    width: 100%!important;
    left: 0%!important;
    right: 0!important;
}

.toast-ios .toast-wrapper .toast-container {
    background: rgba(0, 0, 0, 0.5)!important;
    display: inline-block!important;
    border-radius: 8px!important;
    vertical-align: middle!important;
}

.toast-ios .toast-wrapper .toast-container .toast-message {
    display: block!important;
    padding: none!important;
    color: #fff!important;
    /*font-weight:bold!important;*/
    font-family: '华文细黑'!important;
}

// 下拉刷新,去掉默认border
.has-refresher>.scroll-content {
    border: 0!important;
}


/*明细弹窗样式*/

.alert-sub-title .alert-left {
    width: 50%!important;
    float: left!important;
    text-align: left!important;
    margin-top: r(15px)!important;
    color: #000!important;
    font-size: r(20px)!important;
}

.alert-sub-title .alert-right {
    width: 50%!important;
    float: left!important;
    text-align: right!important;
    margin-top: r(15px)!important;
    color: #000!important;
    font-size: r(20px)!important;
}

.alert-sub-title .alert-count {
    width: 50%!important;
    float: left!important;
    text-align: left!important;
    font-size: r(28px)!important;
    font-weight: 600;
    color: #323232!important;
    margin-top: r(5px)!important;
}

.alert-sub-title .alert-money {
    width: 50%!important;
    float: left!important;
    text-align: right!important;
    font-size: r(28px)!important;
    font-weight: 600;
    color: #323232!important;
    margin-top: r(5px)!important;
}

.bigFont {
    width: 50%!important;
    float: left!important;
    text-align: left!important;
    margin-top: r(15px)!important;
    font-size: r(30px)!important;
    color: #000!important;
}

.bigRight {
    width: 50%!important;
    float: left!important;
    text-align: right!important;
    margin-top: r(15px)!important;
    color: #000!important;
    font-size: r(30px)!important;
}

// 城市选择,日期选择等选择框样式
