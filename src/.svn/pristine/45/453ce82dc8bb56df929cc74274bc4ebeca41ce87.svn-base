.show-tabbar {
    min-height: r(100px)!important;
    a.tab-button {
        min-height: r(100px)!important;
        ion-icon {
            font-size: r(52px)!important;
        }
        span {
            font-size: r(20px)!important;
        }
    }
}

div.fixed-content,
div.scroll-content {
    margin-top: r(93px)!important; // margin-bottom: r(100px)!important;
}

ion-item {
    padding: 0!important;
    min-height: r(60px)!important;
    ion-input,
    ion-label {
        font-size: r(30px);
    }
    div,
    .input-cover,
    .input-wrapper,
    .item-inner {
        height: r(60px)!important;
    }
}

button.button-full {
    border-radius: r(8px);
    font-size: r(34px);
    height: r(88px);
    font-weight: 100;
    color: #fff;
}

//toast-message
.toast-wrapper {
    border-radius: r(8px)!important;
    .toast-container {
        .toast-message {
            font-size: r(18px)!important;
            padding: r(15px)!important;
        }
    }
}

