ion-title {
    text-align: center;
    -webkit-text-align: center;
    -moz-text-align: center;
}

body,
* {
    font-family: "Microsoft YaHei", Arial, Helvetica, sans-serif;
}



ion-header button,
ion-navbar button,
ion-title button,
toolbar-title button {
    position: absolute;
    z-index: 999;
    line-height: r(100px)!important;
    height: r(100px)!important;
}

ion-header,
.header,
.toolbar,
.title,
.header-ios,
.toolbar-ios,
.title-ios,
ion-title,
toolbar-title {
    font-size: r(34px);
    height: r(100px);
    div {
        line-height: r(100px)!important;
        height: r(100px)!important;
        font-size: r(34px)!important;
    }
    button {
        padding-right: r(50px);
        height: r(100px);
        line-height: r(100px);
        background: none;
        .iconfont {
            font-size: r(50px);
        }
    }
    button:last-child {
        right: 0;
        font-size: r(18px)
    } // button {
