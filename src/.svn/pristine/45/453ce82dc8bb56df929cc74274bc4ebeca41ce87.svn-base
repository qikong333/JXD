.item-city-picker {
    float: right;
    border: none;
    margin-top: r(20px);
    width: 70%!important;
    /*height:100%!important;*/
    height: r(100px)!important; // city-picker{
    //      position: absolute;
    //     left: 72px;
    // }
}

.item-inner {
    border-bottom: none!important;
}

ion-item div,
ion-item .input-cover,
ion-item .input-wrapper,
ion-item .item-inner {
    /*height: auto!important;*/
    // color: #323232;
    height: r(100px)!important;
    line-height: r(70px)!important;
    font-size: r(22px)!important;
}

.city-picker-text {
    position: absolute;
    right: 0;
    top: r(15px);
    color: $hui90;
}

//选择框样式
ion-picker-cmp {
    .picker-toolbar {
        height: r(80px)!important;
        .picker-button {
            margin-top: r(-120px)!important;
            margin-right: r(-50px)!important;
            margin-left: r(-50px)!important;
            span {
                font-size: r(34px)!important;
            }
        }
    }
    .picker-columns {
        .picker-col {
            .picker-opts {
                button {
                    height: 40px!important;
                }
            }
        }
    }
}