<ion-header>

    <ion-navbar hideBackButton>
        <button navPop><i class="icon-fanhui iconfont"></i></button>
        <ion-title>重新绑定银行卡</ion-title>
    </ion-navbar>

</ion-header>


<ion-content class="reload-bank">
    <ul class="reload-all">
        <!--<li>
            <div class="reload-left">持卡人</div>
            <div class="reload-right">{{username}}</div>
        </li>-->
        <li>
            <div class="reload-left">卡号</div>
            <div class="reload-right">
                <input type="text" name="banknumber" placeholder='输入银行卡号' maxlength="19" [(ngModel)]="banknumber" required (blur)="getBank()"
                />
            </div>
        </li>
        <li>
            <div class="reload-left">银行</div>
            <div class="reload-right">{{bankname}}</div>
            <div class="reload-arrow icon iconfont icon-gengduo" float-right></div>
        </li>
        <li>
            <div class="reload-left">预留手机号</div>
            <div class="reload-right"><input type="text" placeholder="输入银行预留手机号码" maxlength="11" name='phonenumber' [(ngModel)]='phonenumber' required></div>
        </li>
        <li>
            <div class="reload-left1">手机验证码</div>
            <div class="reload-right1"><input type="text" placeholder="输入验证码" name='phonecount' [(ngModel)]='phonecount' required></div>
            <div class="reload-button1"><button tappable (click)="go_core()" [disabled]=SMS>{{core}}</button></div>
        </li>
    </ul>

    <!-- <div class="reload-footer" tappable (click)='submit()'>确认绑卡</div> -->
    <div class="but">
        <button ion-button full [disabled]='!butActive' tappable (click)='submit()'>确定绑卡</button>
    </div>
</ion-content>