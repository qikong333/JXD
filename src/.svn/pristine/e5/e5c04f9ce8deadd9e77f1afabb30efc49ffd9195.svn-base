<!--
  Generated template for the PaymentResultPage page.

  See http://ionicframework.com/docs/components/#navigation for more info on
  Ionic pages and navigation.
-->
<ion-header>

  <!--隐藏ionic自带的返回标签-->
  <ion-navbar hideBackButton>
    <!--从新定义自己的返回标签-->
    <button navPop>
      <i class="icon iconfont icon-fanhui"></i>
    </button>
    <ion-title>还款结果</ion-title>
  </ion-navbar>

</ion-header>



<ion-content class="all">
  <div class="main">
    <!--成功显示的页面-->
    <div class="success" *ngIf='result == "yes" '>
      <div class="logo">
        <i class="icon iconfont icon-chenggong"></i>
      </div>
      <ul>
        <li class="li1">还款成功</li>
        <li>
          <p float-left>本次还款</p>
          <p float-right>{{repayment | mfqbNum:'2'}} 元</p>
        </li>
        <li>
          <p float-left>剩余待还</p>
          <p float-right>{{residue | mfqbNum:'2'}} 元</p>
        </li>
      </ul>
    </div>

    <!--失败显示的页面-->
    <div class="fail" *ngIf='result == "no" '>
      <div class="logo">
        <i class="icon iconfont icon-shibai" style="color:#ee5a50;"></i>
      </div>
      <ul>
        <li class="li1">还款失败</li>
        <li class="li2">银行卡余额不足</li>
      </ul>
    </div>


    <div class="bottom">
      <div class="but" tappable (click)='goMyBorrow()'>返回我的借款</div>
    </div>



  </div>
</ion-content>